<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/playidx.css" />
<%- include('../partials/nav') %>

<main>
  <h1 class="h1pidx"><%= title %></h1>
  <table>
    <thead>
      <tr class="table-head">
        <th>Title</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% playlists.forEach(playlist => { %> 
        <tr>
          <td><%= playlist.name %></td>
          <td><%= playlist.description %></td>
          <td><a href="/playlists/<%= playlist._id %>">Details</a></td>
          <td>
            <% if (playlist.owner.equals(user?.profile._id)) { %>
            <form action="/playlists/<%= playlist._id %>?_method=DELETE"method="POST">
              <button>X</button>
            </form>
            <% } %>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>